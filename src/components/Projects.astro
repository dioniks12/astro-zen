---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

<style is:global>
  @import url('swiper/css');
  @import url('swiper/css/navigation');
  @import url('swiper/css/pagination');
</style>

import { Navigation, Pagination } from 'swiper/modules';

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  {
    projects.map(({ name, summary, images, linkPreview, linkSource }, index) => { // CATATAN: 'image' diganti jadi 'images'
      const top = 98 + index * 40;
      return (
        <div
          style={`top: ${top}px;`}
          class="sticky mb-12 rounded-2xl border border-neutral/20 bg-black"
        >
          <div class="bg-difu relative z-[1] grid h-[580px] w-full grid-rows-2 rounded-2xl bg-[#1c232d]/85 before:absolute before:inset-0 before:z-[-1] before:rounded-2xl before:bg-[url(/raja.png)] before:bg-[length:128px] before:bg-repeat before:opacity-[5%] before:content-[''] sm:grid-cols-2 sm:grid-rows-1 md:h-96">
            <div class="px-6 pt-12">
              <h3 class="mb-5 font-serif text-3xl font-medium text-primary">
                {name}
              </h3>
              <p class="text-base text-neutral">{summary}</p>
            </div>
            {/* INI BAGIAN BARU DENGAN CAROUSEL SWIPER */}
            <div class="relative flex h-full w-full items-end justify-end overflow-hidden">
                <Swiper
                    client:load modules={[Navigation, Pagination]}
                    slidesPerView={1}
                    navigation={true}
                    pagination={{ clickable: true }}
                    loop={true}
                    className="h-full w-[95%] sm:h-[85%] sm:w-full"
                  >
                    {images.map((img: string) => ( 
                      <SwiperSlide>
                        <Image
                            class="h-full w-full rounded-ss-xl rounded-ee-2xl object-cover object-center"
                            src={img}
                            alt={name}
                            width="736"
                            height="483"
                        />
                      </SwiperSlide>
                    ))}
                </Swiper>
            </div>
            {/* AKHIR DARI BAGIAN BARU */}
          </div>
        </div>
      );
    })
  }
</Section>